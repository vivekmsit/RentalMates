<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/paybackButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/orange">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/expenseGroupName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:text="Expense Group"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/paybackTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/expenseGroupName"
                    android:elevation="2dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="Payback Amount"
                    android:textColor="@color/white" />
            </RelativeLayout>

        </RelativeLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeListExpenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/paybackButtonLayout">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listExpenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/facebookBackground" />

        </android.support.v4.widget.SwipeRefreshLayout>

    </RelativeLayout>
</FrameLayout>