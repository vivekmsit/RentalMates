<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vivek.rentalmates.activities.DetermineFlatActivity">

    <TextView
        android:id="@+id/alreadyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are already member of given flats, Choose any of the flats and press Continue" />

    <Spinner
        android:id="@+id/chooseFlatSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/alreadyTextView"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/continueWithOldFlatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chooseFlatSpinner"
        android:text="Continue"
        android:layout_alignEnd="@+id/registerNewFlatTextView" />

    <TextView
        android:id="@+id/newRegisteredTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chooseFlatSpinner"
        android:layout_marginTop="67dp"
        android:text="If you want to be a member of already registered flat, enter Details and press Register" />

    <Button
        android:id="@+id/requestRegisterWithOtherFlatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/newRegisteredTextView"
        android:text="Request Register With Other FLAT"
        android:layout_alignEnd="@+id/registerNewFlatTextView" />

    <TextView
        android:id="@+id/registerNewFlatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For Registering a new Flat, Click Register Here"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/registerNewFlatButton" />

    <Button
        android:id="@+id/registerNewFlatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Register New Flat"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:id="@+id/skipButton"
        android:layout_above="@+id/registerNewFlatTextView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
