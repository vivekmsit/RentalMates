<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.vivek.rentalmates.activities.DetermineFlatActivity">

    <TextView android:text="You are already member of given flats, Choose any of the flats and press Continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alreadyTextView" />


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chooseFlatSpinner"
        android:layout_below="@+id/alreadyTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/continueWithOldFlatButton"
        android:layout_below="@+id/chooseFlatSpinner"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you want to be a member of already registered flat, enter Details and press Register"
        android:id="@+id/newRegisteredTextView"
        android:layout_below="@+id/chooseFlatSpinner"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register With OLD FLAT"
        android:id="@+id/registerWithOldFlatButton"
        android:layout_below="@+id/alreadyRegisteredFlatEditText"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alreadyRegisteredFlatEditText"
        android:layout_below="@+id/newRegisteredTextView"
        android:layout_alignParentStart="true"
        android:hint="Flat Name"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For Registering a new Flat, Click Register Here"
        android:id="@+id/registerNewFlatTextView"
        android:layout_marginBottom="46dp"
        android:layout_above="@+id/registerNewFlatButton"
        android:layout_alignEnd="@+id/registerNewFlatButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register New Flat"
        android:id="@+id/registerNewFlatButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
