<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rangeSeekBarOuterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:id="@+id/minMaxRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/minRentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Min Rent" />

            <TextView
                android:id="@+id/maxRentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Min Rent" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/minMaxValueRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/minMaxRelativeLayout">

            <TextView
                android:id="@+id/minRentValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Rs 2K"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/maxRentValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Rs 50K"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/rangeSeekBarInnerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/minMaxValueRelativeLayout"
            android:orientation="horizontal"
            android:paddingBottom="10dp" />

    </RelativeLayout>

    <RadioButton
        android:id="@+id/sharingRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.13"
        android:checked="false"
        android:text="Sharing"
        android:textSize="25sp" />

    <RadioButton
        android:id="@+id/availableRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.13"
        android:checked="false"
        android:text="Available"
        android:textSize="25sp" />

</LinearLayout>